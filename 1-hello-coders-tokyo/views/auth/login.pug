extends ../layouts/common

block content

  if errors
    each error in errors
      .alert.alert-danger= error


  h1 
    span login
    a.ml-2.btn.btn-info(href="/users") users

  form(action="", method="POST")
    //- không viết gì trong dấu "" là gửi lên chính trang hiện tại
    .form-group
      label(for="email") Email
      input#email.form-control(type="text", name="email", value= values ? values.email : '')

      label(for="password") password
      input#password.form-control(type="password", name="password", value= values ? values.password : '')

      button.btn.btn-primary.mt-2 Login