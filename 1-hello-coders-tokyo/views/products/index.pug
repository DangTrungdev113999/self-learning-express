extends ../layouts/common

block content
  h1
    span.mr-3 Product
 
  .d-flex.align-items-center
    form.ml-auto(action ="/product/search", method="GET", class='d-flex')
      input(type="text", name="q",  class = "form-control")
      button(class= "btn btn-primary ml-2") Search  

  .row
    if products
      each product in products
        .col-md-3
          .card()
            img.card-img-top(src=product.Image, alt='...')
            .card-body
              h5.card-title= product.Name
              p.card-text= product.Descroption
              a.btn.btn-primary(href='#') add to card

