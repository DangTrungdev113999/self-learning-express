extends ../layouts/common

block content
  h1
    span.mr-3 Product
 
  .d-flex.align-items-center
    form.ml-auto(action ="/product/search", method="GET", class='d-flex')
      input(type="text", name="q",  class = "form-control")
      button(class= "btn btn-primary ml-2") Search  

  .row
    if products
      each product in products
        .col-md-3
          .card()
            img.card-img-top(src=product.Image, alt='...')
            .card-body
              h5.card-title= product.Name
              p.card-text= product.Descroption
              a.btn.btn-primary(href='cart/add/' + product.Id) add to card

    nav.ml-auto(aria-label='Page navigation example')
      ul.pagination.justify-content-end
        li.page-item
          a.page-link(href='/product?page=' + Previous) Previous
        while startGame <= endGame
          li.page-item
            a.page-link(href='/product?page=' + startGame)=startGame++
        li.page-item
          a.page-link(href='/product?page=' + next) Next